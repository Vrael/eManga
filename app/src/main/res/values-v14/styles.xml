<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="Theme.Emanga" parent="@style/Theme.AppCompat.Light">
        <!-- API 14 theme customizations can go here. -->
        <item name="android:actionBarItemBackground">@drawable/selectable_background_emanga</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Emanga</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Emanga</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Emanga</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Emanga</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Emanga</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_emanga</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_emanga</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Emanga</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarTabTextStyle.Emanga</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBar.Horizontal.Emanga</item>
        <item name="android:activatedBackgroundIndicator">@drawable/selectable_background_emanga</item>
        <item name="android:editTextStyle">@style/EditText.Emanga</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Emanga.Widget</item>
    </style>

    <style name="EditText.Emanga" parent="android:Widget.EditText">
        <item name="android:background">@drawable/emanga_edit_text_holo_light</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ProgressBar.Horizontal.Emanga" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBarStyle">@style/ProgressBar.Emanga</item>
    </style>

    <style name="ProgressBar.Horizontal.Smaill.Emanga" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBarStyle">@style/ProgressBar.Emanga</item>
    </style>

    <style name="ActionBarTabTextStyle.Emanga" parent="@style/Widget.AppCompat.Base.ActionBar.TabText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ActionBar.Solid.Emanga" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_emanga</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_emanga</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_emanga</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Emanga</item>
    </style>

    <style name="ActionBar.Transparent.Emanga" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_emanga</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Emanga</item>
    </style>

    <style name="PopupMenu.Emanga" parent="@style/Widget.AppCompat.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_emanga</item>
    </style>

    <style name="DropDownListView.Emanga" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_emanga</item>
    </style>

    <style name="ActionBarTabStyle.Emanga" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_emanga</item>
    </style>

    <style name="DropDownNav.Emanga" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_emanga</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_emanga</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_emanga</item>
    </style>

    <style name="ProgressBar.Emanga" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_emanga</item>
    </style>

    <style name="ActionButton.CloseMode.Emanga" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_emanga</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Emanga.Widget" parent="@style/Theme.AppCompat.Light">
        <item name="android:popupMenuStyle">@style/PopupMenu.Emanga</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Emanga</item>
    </style>

</resources>