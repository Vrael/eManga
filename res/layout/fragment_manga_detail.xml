<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/manga_detail"
    android:background="@android:color/white"
    tools:context=".MangaDetailFragment" >
    
    <ProgressBar 
        android:id="@+id/manga_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/Widget.ProgressBar.Small"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true" />
    
    <TextView 
        android:id="@+id/manga_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:paddingLeft="50dp"
        android:paddingTop="50dp"
        android:visibility="gone" />
    
    <ImageView 
        android:id="@+id/manga_cover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/manga_title"
        android:layout_centerHorizontal="true"
        android:contentDescription="manga's cover"
        android:visibility="gone" />
    
    <TextView 
        android:id="@+id/manga_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/manga_cover"
        android:visibility="gone" />
    
    <!-- Here come Categories names as horizontal list (programatically) -->
    
    <Button 
        android:id="@+id/manga_start"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/manga_description"
        android:text="@string/button_start"
        android:layout_centerHorizontal="true"
        android:background="#33B5E5"
        android:textColor="@android:color/white"
        android:visibility="gone" />
    
</RelativeLayout>